{
    "manifest_version": 3,
    "name": "Move It",
    "description": "Moves active window away from mouse",
    "version": "1.0",
    "action": {
      "default_icon": "icon.png",
      "default_title": "Move It"
    },
    "permissions": [
      "tabs",
      "windows",
      "scripting"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }