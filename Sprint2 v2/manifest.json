{
  "manifest_version": 2,
  "name": "My p5.js Extension",
  "description": "A browser extension using p5.js",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "tunnel_icon.png"
    }
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["p5.min.js", "sketch.js"],
    "run_at": "document_idle"
  }
]

,
  "icons": {
    "16": "tunnel_icon.png"
  }
}
