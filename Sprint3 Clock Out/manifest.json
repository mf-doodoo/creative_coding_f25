{
  "manifest_version": 3,
  "name": "Clock Out",
  "version": "1.0",
  "description": "Randomly shows a countdown timer and closes all browser windows.",
  "permissions": [
    "tabs",
    "windows",
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
